@model DeansOffice.Helpers.PaginatedList<DeansOffice.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a class="btn btn-primary mt-4" asp-action="Create">Add Student</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentSearch"]"/>
            <input type="submit" value="Search" class="btn btn-outline-success" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<p>Number of students found: @Model.TotalCount</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FNameSortParam"]" asp-route-currentSearch="@ViewData["CurrentSearch"]">
                    FirstName
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LNameSortParam"]" asp-route-currentSearch="@ViewData["CurrentSearch"]">
                    LastName
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]" asp-route-currentSearch="@ViewData["CurrentSearch"]">
                    EnrollmentDate
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.StudentId">Details</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a class="btn btn-secondary @prevDisabled"
   asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-currentSearch="@ViewData["CurrentSearch"]"
   asp-route-pageNumber="@(Model.PageIndex-1)">
    Previous
</a>
<a class="btn btn-secondary @nextDisabled"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-currentSearch="@ViewData["CurrentSearch"]"
   asp-route-pageNumber="@(Model.PageIndex+1)">
    Next
</a>