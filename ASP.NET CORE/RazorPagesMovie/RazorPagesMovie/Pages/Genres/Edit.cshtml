@page "{id:int}"
@model RazorPagesMovie.Pages.Genres.EditModel

@{
    ViewData["Title"] = "Edit Genre";
}

<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Genre.GenreId" />
            <input type="hidden" asp-for="Genre.ConcurrencyToken" />
            <div class="form-group">
                <label asp-for="Genre.GenreTitle" class="control-label"></label>
                <input asp-for="Genre.GenreTitle" class="form-control" />
                <span asp-validation-for="Genre.GenreTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
