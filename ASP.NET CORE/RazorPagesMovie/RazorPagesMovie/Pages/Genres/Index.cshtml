@page
@model RazorPagesMovie.Pages.Genres.IndexModel

@{
    ViewData["Title"] = "Genres";
}

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="SortQuery" asp-items="Model.SortOptions">
            <option value="">All</option>
        </select>
        <input type="submit" value="Sort" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Genre[0].GenreTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre[0].Movies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Genre) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movies.Count)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GenreId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GenreId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GenreId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
