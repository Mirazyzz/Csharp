<UserControl x:Class="FinalProject.Views.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject.Views"
             d:DataContext="{d:DesignInstance Type=local:ReservationControl}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <local:RideDetailsControl Grid.Row="0" HorizontalAlignment="Center" Margin="5"/>

        <DataGrid x:Name="displayingsGrid" Grid.Row="1"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  HorizontalGridLinesBrush="CadetBlue" VerticalGridLinesBrush="CadetBlue"
                  SelectionChanged="DisplayingsGrid_SelectionChanged">

        </DataGrid>
    </Grid>
</UserControl>
