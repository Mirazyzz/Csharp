<UserControl x:Class="FinalProject.Views.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject.Views"
             xmlns:controls="clr-namespace:WizardProgressBarLibrary;assembly=WizardProgressBarLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5" Width="650" Height="80">
            <controls:WizardProgressBar ItemsSource="{Binding Steps}"
                                    Foreground="#FF086398"
                                    Progress="{Binding Progress}"
                                    SnapsToDevicePixels="True"
                                    Margin="40"/>
            <TextBlock Grid.Row="1" Text="{Binding Progress}"/>
        </StackPanel>

        <local:RideDetailsControl Grid.Row="1" HorizontalAlignment="Center" Margin="15"/>

        <StackPanel Grid.Row="2">
            <Button Content="Increase" Click="IncreaseButton_Click" HorizontalAlignment="Right"/>
            <Button Content="Decrease" Click="DecreaseButton_Click" HorizontalAlignment="Left"/>
        </StackPanel>
        
    </Grid>
</UserControl>
